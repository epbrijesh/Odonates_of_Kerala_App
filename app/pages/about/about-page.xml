<Page xmlns="http://schemas.nativescript.org/tns.xsd" class="page-background" navigatingTo="onNavigatingTo">
  <ActionBar title="About App" class="action-bar">
    <NavigationButton visibility="visible" tap="{{ goBack }}" android.systemIcon="ic_menu_back" ios.systemIcon="1" />
  </ActionBar>

  <ScrollView>
    <StackLayout class="p-4">
      <!-- App Info -->
      <StackLayout class="info-card">
        <Image src="~/images/app_01.png" width="120" height="120" class="mb-4" horizontalAlignment="center" />
        <Label text="Odonates of Kerala" class="text-xl section-title text-center" />
        <Label text="Version 1.0" color="#4A7856" class="text-center font-bold" />
        <Label textWrap="true" text="This app is designed to help nature enthusiasts, researchers, and curious minds learn about and identify Odonata species found in Kerala." color="#333333" class="text-center" />
        <Label text="Rate App" class="text-xl external-link text-center font-bold" tap="{{ openPlayStore }}" />	
        <Image src="~/images/app_11.png" width="200" class="mb-4" horizontalAlignment="center" />
        <Label text="Other Apps" class="text-xl external-link text-center font-bold" tap="{{ openPlayStorePub }}" />	
      </StackLayout>

      <!-- Developer Info -->
      <StackLayout class="info-card">
        <Label text="Developer" class="section-title text-center" />
        <Image src="~/images/app_02.png" width="120" height="120" class="rounded-full mb-4" horizontalAlignment="center" doubleTap="{{ onDeveloperImageTap }}" />
        <Label textWrap="true" text="Brijesh Pookkottur" color="#00008B" class="text-xl text-center font-bold mb-2" />
        <Label text="Contact:" textWrap="true" color="#333333" class="text-center" />
        <Label text="epbrijesh@gmail.com" textWrap="true" class="text-center external-link font-bold" tap="{{ sendEmail }}" />
		<Label text="Visit Website" class="external-link text-center font-bold" tap="{{ openWebsite }}" />
      </StackLayout>

      <!-- NGO Info -->
      <StackLayout class="info-card">
	  
        <Label text="Associated With" class="section-title text-center" />
		<Image src="~/images/app_03.png" width="120" height="120" class="rounded-full mb-4" horizontalAlignment="center" doubleTap="{{ onStearImageTap }}" />
        <Label textWrap="true" text="Society for Tropical Ecology and Research (STEAR) Nilambur, Malappuram" color="#333333" class="text-center font-bold" />
        <Label text="The developer is a proud member of STEAR, an NGO dedicated to ecological research and conservation." textWrap="true" class="text-center mt-2" color="#333333" horizontalAlignment="center" />

		<Image src="~/images/app_04.jpg" width="500" class="rounded-full mb-4" horizontalAlignment="center" doubleTap="{{ onTnhsImageTap }}" />
        <Label textWrap="true" text="Travancore Nature History Society (TNHS)" color="#333333" class="text-center font-bold" />
		<Label text="Thanks TNHS and Dr. Kalesh Sadasivan for guidance. TNHS is a Non-Governmental Organization studying Biodiversity of the Southern Western Ghats." textWrap="true" class="text-center mt-2" color="#333333" horizontalAlignment="center" />

	 </StackLayout>
	  
      <!-- Credits Info -->
      <StackLayout class="info-card">
	   <Label text="Acknowledgements and Credits:" class="section-title text-center" />
		<Label text="All the photographs displayed are copyrighted by the respective authors. Please check the attribution URL of each photograph for the original files along with the license details. Feel free to contact me, if this app violating any rights." textWrap="true" class="text-center mt-2" color="#333333" horizontalAlignment="center" />
		
		<Image src="~/images/app_06.jpg" width="500" class="rounded-full mb-4" horizontalAlignment="center" doubleTap="{{ onWikipediaImageTap }}" />
        <Label textWrap="true" text="Wikipedia and Wikimedia Commons" color="#333333" class="text-center font-bold" />
		<Label text="Information in Malayalam has taken from Wikipedia, the free online encyclopedia. Respective links are given in species pages. Most of the species images are taken from Wikimedia Commons, a media file repository making available public domain and freely licensed educational media content." textWrap="true" class="text-center mt-2" color="#333333" horizontalAlignment="center" />

		<Image src="~/images/app_05.jpg" width="500" class="rounded-full mb-4" horizontalAlignment="center" doubleTap="{{ onSosImageTap }}" />
        <Label textWrap="true" text="Society for Odonate Studies (SOS)" color="#333333" class="text-center font-bold" />
		<Label text="Thanks SOS for their eBook - Introduction to Odonata. The Society for Odonate Studies (SOS) is a non-political, non-profit organization formed to impart knowledge to the public on the insect order of Odonata which comprises of dragonflies and damselflies and to conduct scientific studies, with the objective of conservation of the species and their habitats." textWrap="true" class="text-center mt-2" color="#333333" horizontalAlignment="center" />

		<Image src="~/images/app_07.jpg" width="500" class="rounded-full mb-4" horizontalAlignment="center" doubleTap="{{ onInaturalistImageTap }}" />
		<Label text="iNaturalist - A Community for Naturalists. Respective links are given in species pages. Some photos are taken from iNaturalist." textWrap="true" class="text-center mt-2" color="#333333" horizontalAlignment="center" />

      </StackLayout>

      <!-- Source Code -->
      <StackLayout class="info-card">
	  
        <Label text="Development and Source Code" class="section-title text-center" />
 		<Image src="~/images/app_09.jpg" width="500" class="rounded-full mb-4" horizontalAlignment="center" doubleTap="{{ onBoltImageTap }}" />
       <Label text="This app is developed in NativeScript using Bolt.new which is an AI-powered web development agent." textWrap="true" class="text-center mt-2" color="#333333" horizontalAlignment="center" />

      	<Image src="~/images/app_10.jpg" width="500" class="rounded-full mb-4" horizontalAlignment="center" doubleTap="{{ onGithubImageTap }}" />
		<Label text="Source Code code is available in my GitHub repository. It is OpenSource licensed under Apache-2.0 license." textWrap="true" class="text-center mt-2" color="#333333" horizontalAlignment="center" />
	 </StackLayout>


    </StackLayout>
  </ScrollView>
</Page>